<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main-nav.ejs') %>
        <!-- Main Content -->
        <main class="container">
            <div class="row">
                <div class="offset-md-1 col-md-10">
                    <h1>
                        <%= title %>
                    </h1>
                    <a href="/survey-list/add" class="btn btn-primary" role="button">
                        <i class="fas fa-plus-circle"></i> Create Survey</a>
                    <br>
                    <table class="table table-bordered table-striped table-hover">
                        <!-- Header Row-->
                        <tr class="d-flex">
                            <% if(typeof displayName == 'string' && displayName) { %>
                                <th class="text-center col-2">Name</th>
                                <th class="text-center col-2">Owner</th>
                                <th class="text-center col-2">Status</th>
                                <th class="text-center col-6">Actions</th>
                            <% } else { %>
                                <th class="text-center col-3">Name</th>
                                <th class="text-center col-3">Owner</th>
                                <th class="text-center col-3">Status</th>
                                <th class="text-center col-3">Actions</th>
                            <% } %>
                        </tr>

                        <!-- Repeatable Template Row -->

                        <% for(let count = 0; count < MySurveys.length; count++) { %>
                            <tr class="d-flex">
                                <% if(typeof displayName == 'string' && displayName) { %>
                                    <td class="text-center col-2">
                                        <%= MySurveys[count].name %>
                                    </td>
                                    <td class="text-center col-2">
                                        <%= MySurveys[count].owner %>
                                    </td>
                                    <td class="text-center col-2">
                                        <%= MySurveys[count].status %>
                                    </td>
                                    <td class="text-center col-2">
                                        <a href="/survey-list/respond/<%= MySurveys[count]._id %>" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-poll"></i> Respond Survey</a>
                                    </td>
                                    <td class="text-center col-2">
                                        <a href="/survey-list/edit/<%= MySurveys[count]._id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i> Edit Survey</a>
                                    </td>
                                    <td class="text-center col-2">
                                        <a href="/survey-list/delete/<%= MySurveys[count]._id %>" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Delete Survey</a>
                                    </td>
                                <% } else { %>
                                    <td class="text-center col-3">
                                        <%= MySurveys[count].name %>
                                    </td>
                                    <td class="text-center col-3">
                                        <%= MySurveys[count].owner %>
                                    </td>
                                    <td class="text-center col-3">
                                        <%= MySurveys[count].status %>
                                    </td>
                                    <td class="text-center col-3">
                                        <a href="/survey-list/respond/<%= MySurveys[count]._id %>" class="btn btn-secondary btn-sm">
                                        <i class="fas fa-poll"></i> Respond Survey</a>
                                    </td>
                                <% } %>
                            </tr>
                        <% } %>
                    </table>
                </div>
            </div>
        </main>

        <%- include ('../partials/bottom-nav.ejs') %>
        <%- include ('../partials/footer.ejs') %>