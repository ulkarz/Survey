<%- include ('../partials/header.ejs') %>
    <%- include ('../partials/main-nav.ejs') %>
    <div class="banner">
        <div class="banner-response">Response to survey</div>
        </div>
      


        <div class="card border-light mb-3">
            <div class="p-5 card-body">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="/Assets/survey-1.png" class="img-fluid rounded-start survey-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <h5 class="display-6 mb-5">Your feedback is important to us. Please fill out this form and submit.</h5>

                    </div>
                </div>
                <div class="row g-0">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-8">
                        <a type="button" class="btn btn-primary mr-4" href="/survey-list/add">Create a survey</a>
                        <a type="button" class="btn btn-success" href="/survey-list">View all surveys</a>
                    </div>
                </div>
            </div>
        </div>


        <div class="card border-light">
            <div class="card-body">
                <div class="row g-0">
                    <div class="col-md-8 offset-4">
                        <form method="post" autocomplete="off">

                            <fieldset>
                                <legend>Complete your survey</legend>
                                <div class="row mt-5 mb-4">
                                    <div>
                                        <label for="q1" class="form-label">1. <%= survey.q1%></label>
                                    </div>
                                   <div>
                                        <input type="radio" name="response1" required value="<%= survey.q1ans1%>"> <%= survey.q1ans1%><br>
                                        <input type="radio" name="response1"required value="<%= survey.q1ans2%>"> <%= survey.q1ans2%><br>
                                        <input type="radio" name="response1"required value="<%= survey.q1ans3%>"> <%= survey.q1ans3%><br>
                                        <input type="radio" name="response1"required value="<%= survey.q1ans4%>"> <%= survey.q1ans4%><br>
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div>
                                        <label for="q2" class="form-label" >2. <%= survey.q2%></label>
                                    </div>
                                   <div>
                                        <input type="radio" name="response2" required value="<%= survey.q2ans1%>"> <%= survey.q2ans1%><br>
                                        <input type="radio" name="response2" required value="<%= survey.q2ans2%>"> <%= survey.q2ans2%><br>
                                        <input type="radio" name="response2" required value="<%= survey.q2ans3%>"> <%= survey.q2ans3%><br>
                                        <input type="radio" name="response2" required value="<%= survey.q2ans4%>"> <%= survey.q2ans4%><br>
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div>
                                        <label for="q3" class="form-label" >3. <%= survey.q3%></label>
                                    </div>
                                    <div>
                                        <input type="radio" name="response3"required value="<%= survey.q3ans1%>"> <%= survey.q3ans1%><br>
                                        <input type="radio" name="response3"required value="<%= survey.q3ans2%>"> <%= survey.q3ans2%><br>
                                        <input type="radio" name="response3"required value="<%= survey.q3ans3%>"> <%= survey.q3ans3%><br>
                                        <input type="radio" name="response3"required value="<%= survey.q3ans4%>"> <%= survey.q3ans4%><br>
                                    </div>
                                </div>

                                 <div class="row mb-4">
                                    <div>
                                        <label for="q4" class="form-label" >4. <%= survey.q4%></label>
                                    </div>
                                    <div>
                                        <input type="radio" name="response4"required value="true"> True &nbsp;&nbsp;&nbsp;
                                        <input type="radio" name="response4"required value="false"> False<br>
                                    </div>
                                </div>
                                    
                                    <div class="row mb-4">
                                    <div>
                                        <label for="q5" class="form-label" required>5. <%= survey.q5%></label>
                                    </div>
                                    <div>
                                        <input type="radio" name="response5" required value="true"> True &nbsp;&nbsp;&nbsp;
                                        <input type="radio" name="response5" required value="false"> False<br>
                                    </div>
                                </div>

                            </fieldset>

                            <div class="mb-3">
                                <button onclick= "f" class="btn btn-primary btn-sm " id="submit" type="submit"><i class="fas fa-edit"></i>Submit your survey</button>
                                <a class="btn btn-warning btn-sm" href="/"> <i class="fa fa-times"></i> Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <div class="mt-5 mb-5">
            <hr class="p-3 mb-5">

        </div>


        <%- include ('../partials/bottom-nav.ejs') %>
            <%- include ('../partials/footer.ejs') %>