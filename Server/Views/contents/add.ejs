<%- include ('../partials/header.ejs') %>
    <%- include ('../partials/main-nav.ejs') %>

        <!-- Content for the Add page -->
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>

                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Name</label>
                            <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Survey Name" name="name" required>
                        </div>

                        <div class="form-group">
                            <label for="ownerTextField">Owner</label>
                            <input type="text" class="form-control" id="ownerTextField" placeholder="Enter the Owner's Name" name="owner" required>
                        </div>

                        <script>
                $("date").on("change", function() {
                    this.setAttribute(
                        "data-date",
                        moment(this.value, "YYYY-MM-DD").local().
                        .format( this.getAttribute("data-date-format") )
                    )
                }).trigger("change")
              </script>

              <!--placeholder="Survey start date"-->  
              <div class="form-group col-md-3">
                <label for="startDate">Start Date</label>
                <input type="date" class="date" id=""
                placeholder="yyyy-mm-dd" name="startDate" value=""  required data-date="">
              </div>

              
              <div class="form-group col-md-3">
                <label for="endDate">End Date</label>
                <input type="date" class="date" id=""
                placeholder="yyyy-mm-dd" name="endDate" value="" required>
              </div>
                        
                        <div class="form-group">
                            <label for="statusTextField">Status</label>
                            <input type="text" class="form-control" id="statusTextField" placeholder="Enter the Survey Status" name="status" required>
                        </div>

                        <div class="form-group mb-1">
                            <label for="q1TextField">Question 1</label>
                            <input type="text" class="form-control" id="q1TextField" placeholder="Enter the first question" name="q1" required>
                            </div>
                        <div class = "offset-md-1">                   
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q1ans1TextField" placeholder="First Option" name="q1ans1" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q1ans2TextField" placeholder="Second Option" name="q1ans2" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q1ans3TextField" placeholder="Third Option" name="q1ans3" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q1ans4TextField" placeholder="Fourth Option" name="q1ans4" required>
                        </div>
                        </div>
                       

                        <div class="form-group mb-1">
                            <label for="q2TextField">Question 2</label>
                            <input type="text" class="form-control" id="q2TextField" placeholder="Enter the second question" name="q2" required>
                        </div>

                        <div class = "offset-md-1">                   
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q2ans1TextField" placeholder="First Option" name="q2ans1" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q2ans2TextField" placeholder="Second Option" name="q2ans2" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q2ans3TextField" placeholder="Third Option" name="q2ans3" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q2ans4TextField" placeholder="Fourth Option" name="q2ans4" required>
                        </div>
                        </div>

                        <div class="form-group mb-1">
                            <label for="q3TextField">Question 3</label>
                            <input type="text" class="form-control" id="q3TextField" placeholder="Enter the third question" name="q3" required>
                        </div>

                        <div class = "offset-md-1">                   
                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q3ans1TextField" placeholder="First Option" name="q3ans1" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q3ans2TextField" placeholder="Second Option" name="q3ans2" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q3ans3TextField" placeholder="Third Option" name="q3ans3" required>
                        </div>

                        <div class="form-group mb-2">
                            <input type="text" class="form-control" id="q3ans4TextField" placeholder="Fourth Option" name="q3ans4" required>
                        </div>
                        </div>
                        

                            <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i>Submit</button>

                            <a href="/survey-list" class="btn btn-warning">
                                <i class="fas fa-undo"></i>Cancel</a>
                                <br><br><br><br><br>
                    </form>
                    </div>
                </div>
            </div>

